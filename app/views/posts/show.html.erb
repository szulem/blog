<div id="post_content">
	<h1 class="title">
		<%= @post.title %>
	</h1>

	<p class="date">
		Dodane <%= time_ago_in_words(@post.created_at) %> temu
		<% if user_signed_in? %>
			| <%= link_to 'Edytuj', edit_post_path(@post) %>
			| <%= link_to 'Usuń', post_path(@post), method: :delete, data: { confirm: 'Czy jesteś pewien?' } %>
		<% end %>
	</p>

	<p class="body">
		<% # raw wyświetla tekst jako html %>
		<%= raw(@post.body) %>
	</p>

	<div id="comments">
		<h2><%= @post.comments.count %> koment.</h2>
		<%= render @post.comments %>

		<h3>Dodaj komentarz:</h3>
		<%= render "comments/form" %>
	</div>

</div>